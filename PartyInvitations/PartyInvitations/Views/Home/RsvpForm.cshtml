@model PartyInvitations.Models.GuestResponse

@{
    ViewBag.Title = "RsvpForm";
}

<h2>RSVP Form</h2>
<div class="panel panel-success">
    <div class="panel-heading text-center">
        <h4>RSPV</h4>
        <div class="panel-body">

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Your name:</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-group" })

                </div>
                <div class="form-group">
                    <label>Your Email:</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-group" })

                </div>
                    <div class="form-group">
                        <label>Phone no</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-group" })

                    </div>
                    <div class="form-group">
                        <label>Will you attend?</label>
                        @Html.DropDownListFor(x => x.WillAttend, new[]
                {
                            new SelectListItem()
                             {
                                 Text = "Yes, I,ll be there",
                                 Value = bool.TrueString
                             },
      new SelectListItem()
      {
          Text = "No, I can't come",
          Value = bool.FalseString
      },

      },

  "Choose an option", new { @class = "form-group" })
                        <div class="text-center">
                            <input type="submit" value="Submit RSVP" />
                        </div>
                    </div>
            }
        </div>
    </div>
</div>
